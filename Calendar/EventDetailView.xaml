<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Name="this"
             x:Class="Calendar.EventDetailView">
    <VerticalStackLayout>
        <Label Text="{Binding Source={x:Reference this}, Path=dayEvent.Name}"/>
        <HorizontalStackLayout Spacing="8">
            <Label Text="{Binding Source={x:Reference this}, Path=TimeRange}"/>
            <Label Text="{Binding Source={x:Reference this}, Path=dayEvent.Place}"/>
        </HorizontalStackLayout>
        <Label Text="{Binding Source={x:Reference this}, Path=dayEvent.Description}"/>
    </VerticalStackLayout>
</ContentView>
