<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:Calendar.Model"
             x:Name="this"
             x:Class="Calendar.MainPage"
             >
    <ContentPage.Resources>
        <Style TargetType="Label">
            <Setter Property="TextColor" Value="#003049" />
        </Style>
        <Style TargetType="Button">
            <Setter Property="BackgroundColor" Value="White" />
            <Setter Property="TextColor" Value="#003049" />
            <Setter Property="HeightRequest" Value="32" />
            <Setter Property="WidthRequest" Value="32" />
        </Style>
    </ContentPage.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <HorizontalStackLayout HorizontalOptions="Center" Padding="8">
            <Button Text="&lt;" BindingContext="{x:Reference this}" Command="{Binding Path=PreviousMonth}"/>
            <Label BindingContext="{x:Reference this}" Text="{Binding Path=ControlDate, StringFormat='{0:MMMM yyyy}'}"
                   FontAttributes="Bold"
                   FontSize="24"
                   Padding="12" />
            <Button Text=">" BindingContext="{x:Reference this}" Command="{Binding Path=NextMonth}"/>
        </HorizontalStackLayout>

        <StackLayout x:Name="CalendarHolder" Background="Transparent" Grid.Row="1">
            <Grid x:Name="CalendarGrid"
            Padding="8" />
            <VerticalStackLayout 
                x:Name="EventsLayout"
                Spacing="4"
                Padding="8"/>
        </StackLayout>
        <Button Text="+" 
                Grid.Row="1" 
                VerticalOptions="End" 
                HorizontalOptions="End"
                Margin="16"/>
    </Grid>
</ContentPage>
