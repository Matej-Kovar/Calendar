<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:Calendar.Model"
             x:Name="this"
             x:Class="Calendar.MainPage"
             Background="{DynamicResource BackgroundColor}"
             >
    <ScrollView>
        <VerticalStackLayout Padding="24">
            <StackLayout x:Name="CalendarHolder" Background="Transparent"></StackLayout>
            <FlexLayout JustifyContent="SpaceBetween">
                <Label Text="Události" Style="{DynamicResource TextBig}"/>
                <Button Text="&#xe900;" 
                        Style="{DynamicResource IconButton}"
                        Clicked="OnAddButtonClicked"/>
            </FlexLayout>
            <VerticalStackLayout x:Name="EventDetails" Padding="0, 8, 0, 8" Spacing="4">

            </VerticalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
