<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Calendar.Resources.Styles.AppStyles">

    <Style TargetType="Label">
        <Setter Property="TextColor" Value="{DynamicResource TextColor}" />
        <Setter Property="FontFamily" Value="Poppins" />
        <Setter Property="FontSize" Value="16" />
    </Style>

    <Style TargetType="Label" x:Key="TextOnColorStyle">
        <Setter Property="TextColor" Value="{DynamicResource TextOnColor}" />
    </Style>

    <Style TargetType="Label" x:Key="Number">
        <Setter Property="FontFamily" Value="LexendGiga" />
    </Style>
    
    <Style TargetType="Label" x:Key="TextBig">
        <Setter Property="FontSize" Value="24" />
    </Style>
    
    <Style TargetType="Label" x:Key="TextSmall">
        <Setter Property="FontSize" Value="14" />
    </Style>

    <Style TargetType="Entry">
        <Setter Property="TextColor" Value="{DynamicResource TextColor}" />
        <Setter Property="PlaceholderColor" Value="Gray" />
        <Setter Property="FontFamily" Value="Poppins" />
        <Setter Property="BackgroundColor" Value="Transparent" />
        <Setter Property="Shadow" Value="{x:Null}" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="VerticalTextAlignment" Value="Center" />
    </Style>

    <Style TargetType="Entry" x:Key="Time1">
        <Setter Property="HorizontalTextAlignment" Value="Center" />
    </Style>

    <Style TargetType="Border" x:Key="EntryBorder">
        <Setter Property="StrokeShape">
            <Setter.Value>
                <RoundRectangle CornerRadius="8" />
            </Setter.Value>
        </Setter>
        <Setter Property="Stroke" Value="Gray" />
        <Setter Property="StrokeThickness" Value="1" />
        <Setter Property="Padding" Value="0" />
    </Style>

    <Style TargetType="Border" x:Key="EntryBorderPadding">
        <Setter Property="StrokeShape">
            <Setter.Value>
                <RoundRectangle CornerRadius="8" />
            </Setter.Value>
        </Setter>
        <Setter Property="Stroke" Value="Gray" />
        <Setter Property="StrokeThickness" Value="1" />
        <Setter Property="Padding" Value="8, 0, 0, 0" />
    </Style>

    <Style TargetType="Button">
        <Setter Property="BackgroundColor" Value="{DynamicResource PrimaryColor}" />
        <Setter Property="TextColor" Value="{DynamicResource TextOnColor}" />
        <Setter Property="FontFamily" Value="Poppins" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="HeightRequest" Value="36" />
    </Style>

    <Style TargetType="Button" x:Key="IconButton">
        <Setter Property="FontFamily" Value="Icons" />
        <Setter Property="FontSize" Value="20" />
        <Setter Property="Padding" Value="0" />
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="HeightRequest" Value="36" />
        <Setter Property="WidthRequest" Value="36" />
    </Style>

    <x:String x:Key="ArrowLeftIcon">&#xe901;</x:String>
    <x:String x:Key="ArrowRightIcon">&#xe902;</x:String>
    <x:String x:Key="PlusIcon">&#xe900;</x:String>
    <x:String x:Key="CheckmarkIcon">&#xe903;</x:String>
    <x:String x:Key="TrashIcon">&#xe904;</x:String>
</ResourceDictionary>