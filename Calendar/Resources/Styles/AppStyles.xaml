<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Calendar.Resources.Styles.AppStyles">

    <Style TargetType="Label">
        <Setter Property="TextColor" Value="{DynamicResource TextColor}" />
        <Setter Property="FontFamily" Value="Poppins" />
        <Setter Property="FontSize" Value="16" />
    </Style>

    <Style TargetType="Label" x:Key="TextOnColorStyle">
        <Setter Property="TextColor" Value="{DynamicResource TextOnColor}" />
    </Style>

    <Style TargetType="Label" x:Key="Number">
        <Setter Property="FontFamily" Value="LexendGiga" />
    </Style>
    
    <Style TargetType="Label" x:Key="TextBig">
        <Setter Property="FontSize" Value="24" />
    </Style>
    
    <Style TargetType="Label" x:Key="TextSmall">
        <Setter Property="FontSize" Value="14" />
    </Style>

    <Style TargetType="Button">
        <Setter Property="BackgroundColor" Value="{DynamicResource PrimaryColor}" />
        <Setter Property="TextColor" Value="{DynamicResource TextOnColor}" />
        <Setter Property="FontFamily" Value="Poppins" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="HeightRequest" Value="36" />
    </Style>


</ResourceDictionary>